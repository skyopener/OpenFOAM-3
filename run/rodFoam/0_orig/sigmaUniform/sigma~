FoamFile
{
    version 2.0;
    format ascii;

    root "/home/alex/OpenFOAM/alex-1.4/run/simulationTIG/mhdFoamTIG/rodeFoam";
    case ".";
    instance "0";
    local "";

    class volScalarField;
    object sigma;
}

