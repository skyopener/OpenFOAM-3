{
    leftWall
    {
        type            fixedValue;
        value           uniform 2700;
    }
    rightWall
    {
        type            fixedValue;
        value           uniform 2700;
    }
    atmosphereTop
    {
        type            fixedValue;
        value           uniform  0.1 //20;
    }
    atmosphereRight
    {
        type            fixedValue;
        value           uniform 0.1;
    }
    atmosphereLeft
    {
        type            fixedValue;
        value           uniform 0.1;
    }
    axis
    {
        type            symmetryPlane;
    }
    Back
    {
        type            wedge;
    }
    front
    {
        type            wedge;
    }
